<%- include('./partials/header.ejs') %>
<body>
    <nav class="navbar navbar-light bg-dark">
        <a href="/perguntar" class="nav-link-contein-index">
            Realizar Pergunta
        </a>
    </nav>
    <div class="container div-contain">
        <% perguntas.forEach(pergunta=>{ %>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-dark">Responder</button></a>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include('./partials/footer.ejs') %>