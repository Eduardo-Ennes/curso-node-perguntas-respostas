<%- include('./partials/header.ejs') %>
<body>
    <%- include('./partials/navbar.ejs') %>
    <div class="container div-contein-form">
        <div class="div-flex-resposta">
            <h1><%= pergunta.titulo %></h1>
            <p class="descricao-pergunta"><%= pergunta.descricao %></p>
        </div>
        <form method="POST" action="/responder" class="form-contain-resposta">
            <label>Resposta</label>
            <textarea name="corpo" class="form-control" placeholder="Digite sua resposta:" ></textarea>
            <input type="hidden" value="<%= pergunta.id %>" name="perguntaID">
            <button type="submit" class="btn btn-dark btn-momento">Responder</button>
        </form>

        <div class="div-contein-respostas">
            <h3 class="h3-respostas">Respostas</h3>
            <% respostas.forEach(resposta =>{ %>
                <p class="paragrafo-contein-respostas"><%= resposta.corpo %></p>
            <% }) %>
        </div>
    </div>
</body>
<%- include('./partials/footer.ejs') %>